<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_customers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_add_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_edt"
        android:gravity="center"
        android:padding="12dp"
        android:text="ثبت اطلاعات خریدار"
        android:textColor="#000000" />


    <Button
        android:id="@+id/btn_Show_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_edt"
        android:gravity="center"
        android:padding="12dp"
        android:text="جستجو، بروزرسانی و حذف خریدار"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_see_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_edt"
        android:gravity="center"
        android:padding="12dp"
        android:text="مشاهده و برزرسانی لیست خریداران "
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/frame_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


    </LinearLayout>


</LinearLayout>


